{
    "name": "pyrocms/pyrocms",
    "description": "Build better Laravel websites and applications faster with Pyro.",
    "type": "project",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "keywords": [
        "laravel",
        "control panel",
        "cmf"
    ],
    "authors": [
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "blade-ui-kit/blade-heroicons": "^1.3",
        "owenvoke/blade-fontawesome": "^2.0",
        "streams/core": "^2.0",
        "streams/api": "^1.0",
        "streams/ui": "^1.0"
    },
    "require-dev": {
        "streams/sdk": "^1.0",
        "streams/testing": "^1.0",
        "laravel/tinker": "^2.2",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0",
        "spatie/laravel-web-tinker": "^1.7",
        "barryvdh/laravel-debugbar": "^3.3"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../packages/streams-testing",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../packages/streams-core",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../packages/streams-api",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../packages/streams-sdk",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../packages/streams-ui",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "vendor/erusev/parsedown-extra/test/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "bin-dir": "bin",
        "preferred-stable": false,
        "minimum-stability": "dev",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "pre-autoload-dump": [
            "rm -Rf bootstrap/cache/*.php"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan clear --ansi",
            "@php artisan vendor:publish --ansi --tag=public",
            "@php artisan queue:restart --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
