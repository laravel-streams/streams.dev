{
    "name": "pyrocms/pyrocms",
    "description": "Build better Laravel websites and applications faster with Pyro.",
    "type": "project",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "keywords": [
        "laravel",
        "control panel",
        "cmf"
    ],
    "authors": [
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "http-interop/http-factory-guzzle": "^1.0",
        "blade-ui-kit/blade-heroicons": "^1.2",
        "owenvoke/blade-fontawesome": "^1.6",
        "graham-campbell/gitlab": "^5.4",
        "guzzlehttp/guzzle": "^7.2",
        "streams/core": "^2.0",
        "streams/api": "^1.0",
        "streams/ui": "^1.0"
    },
    "require-dev": {
        "laravel/tinker": "^2.2",
        "streams/testing": "^1.0",
        "facade/ignition": "^2.0",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^9.0",
        "fzaninotto/faker": "^1.9",
        "barryvdh/laravel-debugbar": "^3.3",
        "spatie/laravel-web-tinker": "^1.7"
    },
    "repositories": [],
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "vendor/erusev/parsedown-extra/test/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "dont-discover": []
    },
    "config": {
        "bin-dir": "bin",
        "preferred-stable": false,
        "minimum-stability": "dev",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "pre-autoload-dump": [
            "rm -Rf bootstrap/cache/*.php"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan clear --ansi",
            "@php artisan vendor:publish --ansi --tag=public",
            "@php artisan queue:restart --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
