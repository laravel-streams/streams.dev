{
    "name": "Testing",
    "handle": "testing",
    "description": "Basic testing for the UI.",
    "config": {
        "source": {
            "type": "self"
        }
    },
    "fields": [
        {
            "handle": "name",
            "description": "Just a name.",
            "instructions": "Just some instructions.",
            "type": "string",
            "rules": [
                "min:5",
                "max:20"
            ],
            "input": {
                "type": "text"
            }
        },
        {
            "handle": "email",
            "description": "Your email address.",
            "type": "email"
        },
        {
            "handle": "status",
            "type": "select",
            "config": {
                "options": {
                    "draft": "Draft",
                    "published": "Published"
                }
            }
        }
    ],
    "ui": {
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "cancel",
                        "class": "-secondary",
                        "attributes": {
                            "href": "{cp.section.url}"
                        }
                    }
                ]
            }
        ]
    },
    "data": []
}
