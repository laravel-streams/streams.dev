{
    "name": "Streams API",
    "extends": "docs",
    "url_prefix": "docs/api",
    "path_prefix": "vendor/streams/api/docs",
    "routes": {
        "view": {
            "uri": "docs/api/{id}",
            "view": "doc"
        }
    },
    "description": "Documentation for all things contained in the API package.",
    "project": "streams/api",
    "github_docs": "https://github.com/laravel-streams/streams-api/blob/1.0/docs",
    "config": {
        "source": {
            "path": "vendor/streams/api/docs"
        }
    },
    "ui": {
        "cp": {
            "section": {
                "title": "API",
                "parent": "docs",
                "stream": "docs_api",
                "buttons": [
                    {
                        "handle": "improve",
                        "text": "View Docs",
                        "attributes": {
                            "target": "_blank",
                            "url": "/docs/api/introduction"
                        }
                    }
                ]
            }
        }
    }
}
