{
    "name": "Core Documentation",
    "extends": "docs",
    "url_prefix": "docs/core",
    "path_prefix": "vendor/streams/core/docs",
    "routes": {
        "view": {
            "uri": "docs/core/{id}",
            "view": "doc"
        }
    },
    "description": "Documentation for all things contained in the core package.",
    "project": "streams-core",
    "github_docs": "https://github.com/laravel-streams/streams-core/blob/2.0/docs",
    "config": {
        "source": {
            "path": "vendor/streams/core/docs"
        }
    },
    "ui": {
        "cp": {
            "section": {
                "title": "Core",
                "parent": "docs",
                "stream": "docs_core",
                "buttons": [
                    {
                        "handle": "improve",
                        "text": "View Docs",
                        "attributes": {
                            "target": "_blank",
                            "url": "/docs/core/introduction"
                        }
                    }
                ]
            }
        }
    }
}
