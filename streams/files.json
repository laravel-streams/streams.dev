{
    "name": "Files",
    "handle": "files",
    "description": "Basic filesystem cache for the website.",
    "config": {
        "source": {
            "type": "self"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "files",
            "parse": true,
            "view": "files"
        },
        {
            "handle": "view",
            "uri": "files\/{id}",
            "parse": true,
            "view": "file"
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "uuid",
            "required": true,
            "unique": true,
            "config": {
                "default": true
            }
        },
        {
            "handle": "path",
            "type": "string"
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "handle": "files"
            }
        },
        "tables": [
            {
                "handle": "default",
                "columns": [
                    {
                        "handle": "path"
                    }
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "/files/{entry.id}",
                            "target": "_blank",
                            "class": ["a-button", "-secondary"]
                        }
                    }
                ],
                "config": {
                    "order_by": [
                        ["path", "asc"]
                    ]
                }
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "cancel",
                        "class": "-secondary",
                        "attributes": {
                            "href": "{cp.section.url}"
                        }
                    }
                ]
            }
        ]
    },
