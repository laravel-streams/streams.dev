{
    "name": "Pages",
    "handle": "pages",
    "description": "Basic pages for the website.",
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "{path}",
            "parse": true,
            "view": "{layout}"
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "path",
            "type": "string",
            "required": true,
            "unique": true
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "editor"
            }
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "component": "anchor",
                    "text": "Pages",
                    "url": "/admin/pages",
                    "sort_order": 1
                }
            ]
        },
        "components": [
            {
                "component": "table",
                "handle": "default",
                "columns": [
                    {
                        "value": "title",
                        "header": {
                            "text": "Title"
                        }
                    },
                    {
                        "value": "path",
                        "header": {
                            "text": "Path"
                        }
                    }
                ],
                "buttons": [
                    {
                        "tag": "a",
                        "handle": "edit",
                        "text": "Edit",
                        "url": "/{request.segments.0}/{request.segments.1}/{entry.id}/edit"
                    }
                ]
            }
        ]
    }
}
