{
    "handle": "pages",
    "config": {
        "source": {
            "format": "md"
        }
    },
    "template": "page",
    "rules": {
        "id": "required",
        "title": "required"
    },
    "fields": [
        {
            "handle": "id",
            "type": "slug"
        },
        {
            "handle": "title",
            "type": "string"
        },
        {
            "handle": "path",
            "type": "string"
        },
        {
            "handle": "enabled",
            "type": "boolean"
        },
        {
            "handle": "sort",
            "type": "integer"
        },
        {
            "handle": "body",
            "type": "markdown"
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "title": "Pages",
                "buttons": [
                    {"handle": "create"}
                ]
            }
        },
        "tables": [
            {
                "handle": "default",
                "columns": [
                    {"handle": "title"},
                    {"handle": "enabled"}
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "text": "View",
                        "handle": "view",
                        "attributes": {
                            "target": "_blank",
                            "href": "/{entry.path}",
                            "class": ["a-button", "-blue"]
                        }
                    }
                ]
            }
        ]
    }
}
