{
    "name": "Pages",
    "handle": "pages",
    "description": "Basic pages for the website.",
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "{uri}",
            "parse": true,
            "view": "page"
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true
        },
        {
            "handle": "body",
            "type": "string"
        }
    ],
    "ui": {
        "tables": [
            {
                "handle": "default",
                "columns": [
                    {
                        "handle": "title"
                    }
                ],
                "buttons": [
                    {
                        "handle": "edit"
                    }
                ]
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "cancel",
                        "class": "-secondary",
                        "attributes": {
                            "href": "{cp.section.url}"
                        }
                    }
                ]
            }
        ]
    }
}
