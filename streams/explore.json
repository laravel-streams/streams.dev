{
    "name": "Explore",
    "description": "Explore the feature, functions, and operating principles of Laravel Streams.",
    "routes.view": {
        "uri": "/explore/{id}"
    },
    "translatable": true,
    "config.source.format": "md",
    "fields": {
        "id": {
            "type": "slug"
        },
        "title": "string",
        "body": "string",
        "parent": {
            "type": "relationship",
            "config": {
                "related": "explore"
            }
        },
        "options": {
            "type": "array"
        },
        "links": {
            "type": "array"
        },
        "menu": {
            "type": "array"
        }
    },
    "ui": {
        "cp": {
            "section": {
                "buttons": [{"handle": "create"}]
            }
        },
        "tables": {
            "default": {
                "filters": [
                    {
                        "handle": "search",
                        "fields": [
                            "id",
                            "title",
                            "body"
                        ]
                    }
                ],
                "columns": [
                    {
                        "handle": "id",
                        "heading": "ID"
                    },
                    {
                        "handle": "title"
                    }
                ],
                "buttons": [
                    {
                        "handle": "edit",
                        "context": "secondary"
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "/explore/{entry.id}",
                            "target": "_blank"
                        }
                    }
                ]
            }
        }
    }
}
