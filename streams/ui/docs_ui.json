{
    "tables": {
        "default": {
            "views": [
                {
                    "handle": "all"
                }
            ],
            "filters": [
                {
                    "handle": "search",
                    "fields": [
                        "id",
                        "title",
                        "body"
                    ]
                }
            ],
            "columns": [
                {
                    "handle": "id",
                    "heading": "ID",
                    "value": "id"
                },
                {
                    "handle": "sort",
                    "value": "sort"
                },
                {
                    "handle": "title",
                    "value": "title"
                }
            ],
            "buttons": [
                {
                    "text": "Edit",
                    "handle": "edit",
                    "attributes": {
                        "href": "/cp/docs/{entry.id}/edit"
                    }
                },
                {
                    "text": "View",
                    "handle": "view",
                    "attributes": {
                        "target": "_blank",
                        "href": "/{stream.url_prefix}/{entry.id}"
                    }
                }
            ]
        }
    },
    "buttons": [
        {
            "handle": "improve",
            "text": "Improve This Page",
            "attributes": {
                "target": "_blank",
                "style": "margin: 1rem;",
                "url": "test/{request.ip}/{entry.id}"
            }
        }
    ]
}
