{
    "name": "Laravel Streams",
    "description": "The main project documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "path_prefix": "docs",

    "routes": [
        {
            "handle": "view",
            "uri": "docs/{id}",
            "stream": "docs",
            "view": "doc"
        }
    ],

    "project": "streams",
    "github_docs": "https://github.com/laravel-streams/streams.dev/blob/master/docs",

    "config": {
        "source": {
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "config": {
                "seperator": "_"
            },
            "input": {
                "type": "input"
            }
        },
        {
            "handle": "sort",
            "type": "integer",
            "rules": ["required", "min:0", "multiple_of:10"],
            "config": {
                "default": 10
            },
            "input": {
                "type": "integer"
            }
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "markdown"
            }
        },
        {
            "handle": "category",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "basics": "The Basics",
                    "core_concepts": "Core Concepts",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced",
                    "reference": "Reference",
                    "field_types": "Field Types"
                }
            }
        },
        {
            "handle": "stage",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "default": "outlining",
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing",
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        {
            "handle": "enabled",
            "type": "boolean",
            "input": {
                "type": "toggle"
            }
        },
        {
            "handle": "publish_at",
            "type": "date",
            "input": {
                "type": "date"
            }
        }
    ],
    "ui": {
        "admin": {
            "navigation": [
                {
                    "sort_order": 2,
                    "text": "Docs",
                    "url": "\/admin\/docs",
                    "component": "anchor"
                }
            ]
        },
        "components": [
            {
                "component": "table",
                "handle": "default",
                "selectable": true,
                "filters": [
                    {
                        "handle": "title",
                        "type": "string",
                        "placeholder": "Title"
                    }
                ],
                "columns": [
                    {
                        "value": "sort",
                        "header": {
                            "text": "Sort Order"
                        }
                    },
                    {
                        "value": "id",
                        "header": {
                            "text": "ID"
                        }
                    },
                    {
                        "value": "title",
                        "header": {
                            "text": "Title"
                        }
                    },
                    {
                        "value": "category",
                        "header": {
                            "text": "Category"
                        }
                    }
                ],
                "buttons": [
                    {
                        "button": "button.edit"
                    },
                    {
                        "tag": "a",
                        "handle": "view",
                        "text": "View",
                        "component": "button",
                        "url": "/docs/{entry.id}",
                        "attributes": {
                            "target": "_blank"
                        }
                    }
                ],
                "actions": [
                    {
                        "handle": "delete",
                        "text": "Delete",
                        "type": "delete"
                    }
                ]
            }
        ]
    }
}
