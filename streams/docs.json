{
    "name": "Laravel Streams",
    "description": "The main project documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "path_prefix": "docs",

    "routes": [
        {
            "handle": "schmiew",
            "uri": "docs/test/{id}",
            "stream": "docs",
            "view": "doc"
        },
        {
            "handle": "view",
            "uri": "docs/{id}",
            "stream": "docs",
            "view": "doc"
        }
    ],

    "project": "streams",
    "github_docs": "https://github.com/laravel-streams/streams.dev/blob/master/docs",

    "config": {
        "source": {
            "path": "docs",
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "config": {
                "seperator": "_"
            },
            "input": {
                "type": "input"
            }
        },
        {
            "handle": "sort",
            "type": "integer",
            "rules": ["required", "min:0", "multiple_of:10"],
            "config": {
                "default": 10
            },
            "input": {
                "type": "integer"
            }
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "body",
            "type": "markdown",
            "input": {
                "type": "markdown"
            }
        },
        {
            "handle": "category",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "basics": "The Basics",
                    "core_concepts": "Core Concepts",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced",
                    "reference": "Reference",
                    "field_types": "Field Types"
                }
            }
        },
        {
            "handle": "stage",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "default": "outlining",
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing",
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        {
            "handle": "enabled",
            "type": "boolean",
            "input": {
                "type": "toggle"
            }
        },
        {
            "handle": "publish_at",
            "type": "date",
            "input": {
                "type": "date"
            }
        }
    ],
    "ui": {
        "tables": {
            "default": {
                "views": [
                    {
                        "handle": "all"
                    },
                    {
                        "handle": "drafts",
                        "filters": [
                            {
                                "handle": "title",
                                "type": "input"
                            }
                        ],
                        "query": [{ "where": ["stage", "drafting"] }]
                    }
                ],
                "filters": [
                    {
                        "handle": "search",
                        "fields": ["id", "title", "body"]
                    }
                ],
                "columns": [
                    {
                        "handle": "id",
                        "heading": "ID",
                        "value": "id"
                    },
                    {
                        "handle": "sort",
                        "value": "sort"
                    },
                    {
                        "handle": "title",
                        "value": "title"
                    }
                ],
                "buttons": [
                    {
                        "text": "Edit",
                        "handle": "edit",
                        "attributes": {
                            "href": "/cp/{request.segments.1}/{entry.id}/edit",
                            "class": ["a-button", "-red"]
                        }
                    },
                    {
                        "text": "Code",
                        "handle": "code",
                        "attributes": {
                            "href": "vscode://file{app.base_path}/{stream.path_prefix}/{entry.id}.md",
                            "class": ["a-button", "-secondary"]
                        }
                    },
                    {
                        "text": "View",
                        "handle": "view",
                        "attributes": {
                            "target": "_blank",
                            "href": "/{stream.url_prefix}/{entry.id}",
                            "class": ["a-button", "-blue"]
                        }
                    }
                ]
            }
        },
        "buttons": [
            {
                "handle": "improve",
                "text": "Improve This Page",
                "attributes": {
                    "target": "_blank",
                    "style": "margin: 1rem;",
                    "url": "{stream.github_docs}/{entry.id}.md"
                }
            }
        ],
        "alerts": [
            {
                "handle": "default",
                "text": "This feature is in active development!",
                "type": "default",
                "attributes": {
                    "style": "margin: 1rem;"
                }
            }
        ],
        "avatars": [
            {
                "handle": "default",
                "type": "red",
                "img": "https://api.lorem.space/image/face?hash=92048",
                "attributes": {
                    "style": "margin: 1rem;"
                }
            }
        ]
    }
}
