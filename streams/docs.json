{
    "name": "Docs",
    "handle": "docs",
    "description": "Basic docs for the project.",
    "config": {
        "source": {
            "format": "html"
        }
    },
    "routes": [
        {
            "handle": "view",
            "uri": "docs/{id}",
            "view": "docs"
        }
    ],
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "required": true,
            "unique": true
        },
        {
            "handle": "sort_order",
            "type": "integer",
            "config": {
                "default": "increment"
            }
        },
        {
            "handle": "category",
            "type": "string"
        },
        {
            "handle": "title",
            "type": "string"
        },
        {
            "handle": "description",
            "type": "string",
            "input": {
                "type": "textarea"
            }
        },
        {
            "handle": "body",
            "type": "string",
            "input": {
                "type": "editor"
            }
        }
    ],
    "ui": {
        "cp": {
            "section": {
                "buttons": [{ "handle": "create" }]
            }
        },
        "tables": [
            {
                "handle": "default",
                "filters": [
                    {
                        "handle": "title"
                    }
                ],
                "columns": [{ "handle": "title" }, { "handle": "category" }],
                "buttons": [
                    {
                        "handle": "edit"
                    },
                    {
                        "handle": "view",
                        "attributes": {
                            "href": "/docs/{entry.id}",
                            "target": "_blank",
                            "class": ["a-button", "-secondary"]
                        }
                    }
                ]
            }
        ],
        "forms": [
            {
                "handle": "default",
                "buttons": [
                    {
                        "handle": "cancel",
                        "class": "-secondary",
                        "attributes": {
                            "href": "{cp.section.url}"
                        }
                    }
                ]
            }
        ]
    }
}
