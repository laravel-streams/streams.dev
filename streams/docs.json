{
    "name": "Documentation",
    "description": "The main entry point to project and component documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "routes.view": "docs/{id}",
    "project": "streams",
    "config": {
        "source": {
            "path": "docs",
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": {
        "id": {
            "type": "string",
            "rules": [
                "regex:/[a-z0-9\\-\\_]/"
            ]
        },
        "sort": {
            "type": "integer",
            "rules": [
                "required",
                "min:0",
                "regex:/[0-9]{1,3}/"
            ]
        },
        "title": {
            "type": "string"
        },
        "intro": {
            "type": "markdown"
        },
        "body": "markdown",
        "category": {
            "type": "select",
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "reference": "Reference",
                    "core_concepts": "Core Concepts",
                    "basics": "The Basics",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced"
                }
            }
        },
        "stage": {
            "type": "select",
            "default": "outlining",
            "config": {
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing", 
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        "enabled": "boolean"
    },
    "ui": {
        "tables": {
            "default": {
                "filters": {
                    "search": {
                        "fields": [
                            "title",
                            "body"
                        ]
                    }
                },
                "buttons": {
                    "edit": {},
                    "view": {
                        "attributes.href": "/{stream.url_prefix}/{entry.id}",
                        "attributes.target": "__blank"
                    }
                }
            }
        }
    }
}
