{
    "name": "Laravel Streams",
    "description": "The main entry point to project and component documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "path_prefix": "docs",
    "routes": {
        "view": {
            "uri": "docs/{id}",
            "view": "doc"
        }
    },
    "project": "streams",
    "github_docs": "https://github.com/laravel-streams/streams/blob/master/docs",
    "config": {
        "source": {
            "path": "docs",
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": {
        "id": {
            "type": "slug",
            "config": {
                "seperator": "_"
            },
            "input": {
                "type": "input"
            }
        },
        "sort": {
            "type": "integer",
            "rules": ["required", "min:0", "multiple_of:10"],
            "config": {
                "default": 10
            },
            "input": {
                "type": "integer"
            }
        },
        "title": {
            "type": "string",
            "required": true
        },
        "intro": {
            "type": "string"
        },
        "body": {
            "type": "markdown",
            "input": {
                "type": "markdown"
            }
        },
        "category": {
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "core_concepts": "Core Concepts",
                    "basics": "The Basics",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced",
                    "reference": "Reference",
                    "field_types": "Field Types"
                }
            }
        },
        "stage": {
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "default": "outlining",
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing",
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        "enabled": {
            "type": "boolean",
            "input": {
                "type": "toggle"
            }
        },
        "publish_at": {
            "type": "time",
            "input": {
                "type": "date"
            }
        }
    },
    "ui": "@streams/ui/docs_ui.json"
}
