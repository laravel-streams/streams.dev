{
    "name": "Documentation",
    "description": "The main entry point to project and component documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "path_prefix": "docs",
    "routes.view": "docs/{id}",
    "project": "streams",
    "config": {
        "source": {
            "path": "docs",
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": {
        "id": {
            "type": "string",
            "rules": ["regex:/[a-z0-9\\-\\_]/"]
        },
        "sort": {
            "type": "integer",
            "rules": ["required", "min:0", "multiple_of:10"],
            "config": {
                "default": 10
            }
        },
        "title": {
            "type": "string",
            "required": true
        },
        "intro": {
            "type": "markdown"
        },
        "body": {
            "type": "markdown"
        },
        "category": {
            "type": "select",
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "core_concepts": "Core Concepts",
                    "basics": "The Basics",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced",
                    "reference": "Reference"
                }
            }
        },
        "stage": {
            "type": "select",
            "default": "outlining",
            "config": {
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing",
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        "enabled": "boolean",
        "publish_at": "time"
    }
}
