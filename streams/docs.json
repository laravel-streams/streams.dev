{
    "name": "Laravel Streams",
    "description": "The main project documentation.",

    "template": "doc",
    "url_prefix": "docs",
    "path_prefix": "docs",

    "routes": [
        {
            "handle": "view",
            "uri": "docs/{id}",
            "stream": "docs",
            "view": "doc"
        }
    ],
    
    "project": "streams",
    "github_docs": "https://github.com/laravel-streams/streams.dev/blob/master/docs",

    "config": {
        "source": {
            "path": "docs",
            "format": "md"
        }
    },
    "rules": {
        "id": "required"
    },
    "fields": [
        {
            "handle": "id",
            "type": "slug",
            "config": {
                "seperator": "_"
            },
            "input": {
                "type": "input"
            }
        },
        {
            "handle": "sort",
            "type": "integer",
            "rules": ["required", "min:0", "multiple_of:10"],
            "config": {
                "default": 10
            },
            "input": {
                "type": "integer"
            }
        },
        {
            "handle": "title",
            "type": "string",
            "required": true
        },
        {
            "handle": "body",
            "type": "markdown",
            "input": {
                "type": "markdown"
            }
        },
        {
            "handle": "category",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "options": {
                    "introduction": "Introduction",
                    "getting_started": "Getting Started",
                    "core_concepts": "Core Concepts",
                    "basics": "The Basics",
                    "components": "Components",
                    "control_panel": "Control Panel",
                    "streams": "Streams",
                    "database": "Database",
                    "templating": "Templating",
                    "frontend": "Frontend",
                    "security": "Security",
                    "laravel": "Laravel",
                    "developers": "Developers",
                    "advanced": "Advanced",
                    "reference": "Reference",
                    "field_types": "Field Types"
                }
            }
        },
        {
            "handle": "stage",
            "type": "select",
            "input": {
                "type": "select"
            },
            "config": {
                "default": "outlining",
                "options": {
                    "outlining": "Outlining",
                    "drafting": "Drafting",
                    "editing": "Editing",
                    "review": "Review",
                    "done": "Done"
                }
            }
        },
        {
            "handle": "enabled",
            "type": "boolean",
            "input": {
                "type": "toggle"
            }
        },
        {
            "handle": "publish_at",
            "type": "date",
            "input": {
                "type": "date"
            }
        }
    ],
    "ui": "@streams/ui/docs_ui.json"
}
