{
    "name": "Streams UI",
    "description": "Documentation for all things contained in the UI package.",
    "type": "object",
    "required": [
        "sort",
        "title"
    ],
    "properties": {
        "id": {
            "title": "Id",
            "type": "string",
            "pattern": "^[a-z0-9]+(?:[-_][a-z0-9]+)*$"
        },
        "sort": {
            "title": "Sort",
            "default": 10,
            "type": "integer",
            "multipleOf": 10
        },
        "title": {
            "title": "Title",
            "type": "string"
        },
        "body": {
            "title": "Body",
            "type": "string"
        },
        "category": {
            "title": "Category",
            "enum": [
                "introduction",
                "getting_started",
                "core_concepts",
                "basics",
                "components",
                "control_panel",
                "streams",
                "database",
                "templating",
                "frontend",
                "security",
                "laravel",
                "developers",
                "advanced",
                "reference",
                "field_types"
            ],
            "type": "string"
        },
        "stage": {
            "title": "Stage",
            "enum": [
                "outlining",
                "drafting",
                "editing",
                "review",
                "done"
            ],
            "default": "outlining",
            "type": "string"
        },
        "enabled": {
            "title": "Enabled",
            "type": "boolean"
        },
        "publish_at": {
            "title": "Publish At",
            "format": "date",
            "type": "string"
        }
    }
}